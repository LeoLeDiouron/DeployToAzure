extends layout

block content
    div.ml-5.mb-5.mr-5.mt-5
        h1(class="text-primary")='Add a new country in the section "GDP"'
        form(action="",method="post")
            .form-group.row
                label Country
                    input.form-control(name="country")
            .form-group.row
                label GDP (in billions of dollars)
                    input.form-control(name="gdp")
            .form-group.row
                label Rank
                    input.form-control(name="rank")
            .form-group.row
                button.btn-primary Add