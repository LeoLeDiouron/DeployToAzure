extends layout

block content
    div.ml-5.mb-5.mr-5.mt-5
        h1='TOP 10 of countries by population in 2017'
        div(class="list-group")
            each country in countries
                a(href="https://en.wikipedia.org/wiki/"+country.country,class="list-group-item list-group-item-action")= country.rank + '. ' + country.country + ' : ' + country.population + ' millions of habitants'